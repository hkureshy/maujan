<div class="row">
  <div class="col-md-12">
    <div class="col-md-6">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Discount</th>
          </tr>
        </thead>
        <tbody>
          <% @get_services.each do |service| %>
            <tr>
              <td><%= service.service_name %></td>
              <td><%= service.price %></td>
              <td><%= service.discount %></td>
              <td><%= link_to content_tag(:span, '', :class=>"glyphicon glyphicon-pencil"), edit_service_path(service, branch_id: service.branch.id), remote: :true %></td>
              <td><%= link_to content_tag(:span, '', :class=>"glyphicon glyphicon-remove"), service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <%= link_to content_tag(:span, '', :class=>"glyphicon glyphicon-plus") + " ADD BRANCH", new_service_path, remote: :true, class:"col-sm-offset-4" %>
      </div>
    </div>
    <div class="col-md-6">
      <div id="data-editor">
        <%= render 'form' %>
      </div>
    </div>
  </div>
</div>
                          <td class="col-md-2">
                            <%= link_to content_tag(:span, '', :class=>"glyphicon glyphicon-pencil"), edit_users_admin_path(user), remote: :true %>
                          </td>
                          <td class="col-md-2">
                            <%= link_to content_tag(:span, '', :class=>"glyphicon glyphicon-remove"), users_admin_path(user), method: :delete, data: { confirm: 'Are you sure?' } %>

<%= form_for @user, url: users_admin_path(@user), validate: true do |f| %>
  
  <h3>Edit User</h3>

  <div class="field form-group">
    <label class="control-label col-sm-4">Email</label>
    <div class="col-sm-8">
      <%= f.email_field :email, readonly: true, autofocus: true, class: "form-control input-md bgbray" %>
    </div>
  </div>

  <div class="field form-group">
    <label class="control-label col-sm-4">Old Password</label>
    <div class="col-sm-8">
      <%= password_field_tag :current_password, nil, :class => "form-control input-md bgbray", :placeholder => "Current Password" %>
    </div>
  </div>
  
  <div class="field form-group">
    <label class="control-label col-sm-4">New Password</label>
    <div class="col-sm-8">
      <%= f.password_field :password, autocomplete: "off", placeholder: "New Password", class: "form-control input-md bgbray" %>
    </div>
  </div>

  <div class="field form-group">
    <label class="control-label col-sm-4">Confirm Password</label>
    <div class="col-sm-8">
      <%= f.password_field :password_confirmation, autocomplete: "off",placeholder: "Confirm Password", class: "form-control input-md bgbray" %>
    </div>
  </div>

  <div class="actions form-group">
    <div class="col-sm-offset-4 col-sm-8">
      <%= f.submit "Update", class:"btn btn-block bgblue nextBtn btn-lg pull-right" %>
    </div>
  </div>
<% end %>
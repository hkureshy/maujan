<div class="row">
  <div class="col-md-12">
    <div class="col-md-6">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>City</th>
          </tr>
        </thead>
        <tbody>
          <% @get_salons.each do |salon| %>
            <tr>
              <td><%= salon.salon_name %></td>
              <td><%= salon.city %></td>
              <td><%= link_to content_tag(:span, '', :class=>"glyphicon glyphicon-pencil"), edit_salon_path(salon), remote: :true %></td>
              <td><%= link_to content_tag(:span, '', :class=>"glyphicon glyphicon-remove"), salon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <%= link_to content_tag(:span, '', :class=>"glyphicon glyphicon-plus") + " ADD SALON", new_salon_path, remote: :true, class:"col-sm-offset-4" %>
      </div>
    </div>
    <div class="col-md-6">
      <div id="data-editor">
        <%= render 'form' %>
      </div>
    </div>
  </div>
</div>
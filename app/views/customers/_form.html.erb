<%= form_for(@customer) do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <label class="control-label col-sm-12">Name</label><br>
    <div class="col-sm-12">
      <%= f.text_field :name, class:"form-control input-md bgbray", required: "required" %>
    </div>
  </div>

  <div class="field form-group">
    <label class="control-label col-sm-12">Email</label><br>
    <div class="col-sm-12">
      <%= f.text_field :email, class:"form-control input-md bgbray", required: "required" %>
    </div>
  </div>

  <div class="field form-group">
    <label class="control-label col-sm-12">Phone Number</label><br>
    <div class="col-sm-12">
      <%= f.text_field :phone_no, class:"form-control input-md bgbray", required: "required" %>
    </div>
  </div>

  <%= hidden_field_tag :customer_booking_services, session[:services_in_cart_js] %>
  <%= hidden_field_tag :branch_area, @branch.area %>
  <%= hidden_field_tag :branch_city, @branch.city %>


  <!-- <div class="actions form-group"> -->
    <%#= f.submit 'Submit', class: "btn btn-default col-md-12 col-sm-12 col-xs-12 button-border" %>

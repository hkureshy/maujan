<div class="row">
  <div class="col-md-12">
    <div class="col-md-6">
      <table class="table">
        <thead>
          <tr>
            <th>Category</th>
          </tr>
        </thead>
        <tbody>
          <% @get_stylistCat.each do |category| %>
            <tr>
              <td><%= category.category %></td>
              <td><%= link_to content_tag(:span, '', :class=>"glyphicon glyphicon-pencil"), edit_stylist_category_path(category), remote: :true %></td>
              <td><%= link_to content_tag(:span, '', :class=>"glyphicon glyphicon-remove"), category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <%= link_to content_tag(:span, '', :class=>"glyphicon glyphicon-plus") + " ADD CATEGORY", new_stylist_category_path, remote: :true, class:"col-sm-offset-4" %>
      </div>
    </div>
    <div class="col-md-6">
      <div id="data-editor">
        <%= render 'form' %>
      </div>
    </div>
  </div>
</div>